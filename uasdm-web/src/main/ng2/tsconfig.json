{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
		"@shared/*": [
			"src/app/shared/*"
		],
		"@site/*": [
			"src/app/site/*"
		],
		"@core/*": [
			"src/app/core/*"
		],
		"@admin/*": [
			"src/app/admin/*"
		]
	}
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
	"node_modules/*"
  ]
}