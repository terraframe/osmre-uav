<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>gov.osmre.uasdm</groupId>
  <artifactId>uasdm</artifactId>
  <version>0.001.001</version>
  <packaging>pom</packaging>

  <name>UASDM</name>
  <description>Unmanned Aerial Surveilance Data Management</description>

  <modules>
    <module>uasdm-server</module>
    <module>uasdm-web</module>
  </modules>

  <properties>
    <geoprism.version>0.9.26</geoprism.version>
  
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <aspectj.version>1.8.6</aspectj.version>
    <aspectj.plugin.version>1.11</aspectj.plugin.version>

    <geotools.version>16.1</geotools.version>    
  </properties>
  
  <licenses>
    <license>
      <name>
        Apache License, Version 2.0
      </name>
      <url>http://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>
  
  <scm>
    <connection>scm:git:ssh://git@github.com/terraframe/osmre-uav</connection>
    <developerConnection>scm:git:ssh://git@github.com/terraframe/osmre-uav</developerConnection>
    <url>scm:git:ssh://git@github.com/terraframe/osmre-uav</url>
    <tag>0.001.001</tag>
  </scm>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
  <repositories>
    <repository>
      <id>terraframe</id>
      <name>terraframe</name>
      <url>https://nexus.terraframe.com/content/groups/allrepos</url>
      <layout>default</layout>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>terraframe-private-releases</id>
      <name>terraframe-private-releases</name>
      <url>https://nexus.terraframe.com/content/repositories/terraframe-private-releases/</url>
      <layout>default</layout>
    </repository>
    <snapshotRepository>
      <id>terraframe-private-snapshots</id>
      <name>terraframe-private-snapshots</name>
      <url>https://nexus.terraframe.com/content/repositories/terraframe-private-snapshots/</url>
      <layout>default</layout>
    </snapshotRepository>
  </distributionManagement>

  <build>
    <plugins>
      <!--
      <plugin>
        <groupId>org.owasp</groupId>
        <artifactId>dependency-check-maven</artifactId>
        <version>5.3.2</version>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      -->      

      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.4.2</version>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <version>1.8.1</version>
          </dependency>
        </dependencies>
      </plugin>
    
      <!-- Add generated source directories -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>src/main/java-gen/base</source>
                <source>src/main/java-gen/stub</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <inherited>true</inherited>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>2.11</version>
        <configuration>
          <header>${basedir}/LICENSE_HEADER</header>
          <excludes>
            <exclude>target/**</exclude>
            <exclude>m2-target/**</exclude>
            <exclude>**/*.properties</exclude>
            <exclude>**/*.launch</exclude>
            <exclude>**/*.vsd</exclude>
            <exclude>**/*.gitignore</exclude>
            <exclude>**/*.LESSER</exclude>
            <exclude>**/*.xls</exclude>
            <exclude>**/doc/**</exclude>
            <exclude>**/launches/**</exclude>
            <exclude>**/*.jar</exclude>
            <exclude>LICENSE_HEADER</exclude>
            <exclude>**/*.markdown</exclude>
            <exclude>**/COPYING</exclude>
            <exclude>**/logs/**</exclude>
            <exclude>**/*.png</exclude>
            <exclude>**/thirdparty/**</exclude>
            <exclude>**/yui2/**</exclude>
            <exclude>**/yui3/**</exclude>
            <exclude>**/.git/**</exclude>
            <exclude>**/ajcore*.txt</exclude>
            <exclude>**/.directory</exclude>
            <exclude>**/.keystore</exclude>
            <exclude>**/.keyStore</exclude>
            <exclude>**/*.yml</exclude>
            <exclude>**/custom-fonts/**</exclude>
            <exclude>**/node_modules/**</exclude>
            <exclude>**/typings/**</exclude>
            <exclude>**/ng2/**</exclude>
            <exclude>**/webapp/dist/**</exclude>
            <exclude>**/cldr/**</exclude>
            <exclude>uasdm-clusterodm/ClusterODM/**</exclude>
            <exclude>uasdm-micasense/imageprocessing/**</exclude>
            <exclude>uasdm-micasense/micasense/**</exclude>
            <exclude>uasdm-micasense/in/**</exclude>
            <exclude>uasdm-micasense/out/**</exclude>
            <exclude>uasdm-micasense/.pytest_cache/**</exclude>
            <exclude>uasdm-odm/NodeODM/**</exclude>
            <exclude>uasdm-odm/ODM/**</exclude>
            <exclude>geoserver-data/**</exclude>
            <exclude>src/solr/configsets/**</exclude>
            <exclude>**/session/sessionCache/**</exclude>

            <!-- 3rd party library mishmashes. When we upgrade tomcat we can remove these with webjars. -->
            <exclude>**/webapp/3rd-party/**</exclude>
          </excludes>
          <properties>
            <name>${project.name}</name>
            <year>${project.inceptionYear}</year>
            <holder>The Department of Interior</holder>
            <contact>getinfo@osmre.gov</contact>
          </properties>
          <encoding>UTF-8</encoding>
        </configuration>
        <!-- <executions>
          <execution>
            <phase>process-sources</phase>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions> -->
      </plugin>
    </plugins>
    <pluginManagement>
    	<plugins>
    		<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
    		<plugin>
    			<groupId>org.eclipse.m2e</groupId>
    			<artifactId>lifecycle-mapping</artifactId>
    			<version>1.0.0</version>
    			<configuration>
    				<lifecycleMappingMetadata>
    					<pluginExecutions>
    						<pluginExecution>
    							<pluginExecutionFilter>
    								<groupId>
    									org.apache.maven.plugins
    								</groupId>
    								<artifactId>
    									maven-dependency-plugin
    								</artifactId>
    								<versionRange>[2.8,)</versionRange>
    								<goals>
    									<goal>build-classpath</goal>
    								</goals>
    							</pluginExecutionFilter>
    							<action>
    								<ignore />
    							</action>
    						</pluginExecution>
    					</pluginExecutions>
    				</lifecycleMappingMetadata>
    			</configuration>
    		</plugin>
    	</plugins>
    </pluginManagement>
  </build>
</project>
